{
    "name": "@parsify/math",
    "version": "0.3.0",
    "description": "Parsify plugin for mathematical expressions & unit conversions",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "author": "Antoni Kepinski <a@kepinski.me> (https://kepinski.me)",
    "bugs": {
        "url": "https://github.com/parsify/math/issues"
    },
    "scripts": {
        "prebuild": "del-cli dist",
        "esm": "tsc --module esnext && cpy dist/index.js dist/src --rename index.esm.js",
        "cjs": "tsc --module commonjs",
        "build": "npm run esm && npm run cjs",
        "test": "xo && nyc ava",
        "prepublishOnly": "npm run build"
    },
    "engines": {
        "node": ">=10"
    },
    "license": "MIT",
    "repository": "parsify/math",
    "homepage": "https://github.com/parsify/math",
    "keywords": [
        "parsify",
        "@parsify/math",
        "parsify-plugin",
        "plugin",
        "expression-parser",
        "parser",
        "expression",
        "math",
        "math-expressions",
        "mathjs"
    ],
    "devDependencies": {
        "@akepinski/tsconfig": "0.0.2",
        "@types/mathjs": "^6.0.5",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "ava": "^3.8.2",
        "coveralls": "^3.1.0",
        "cpy-cli": "^3.1.1",
        "del-cli": "^3.0.1",
        "eslint-config-xo-typescript": "^0.29.0",
        "nyc": "^15.0.1",
        "ts-node": "^8.10.1",
        "typescript": "^3.9.2",
        "xo": "^0.30.0"
    },
    "sideEffects": false,
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "xo": {
        "extends": "xo-typescript",
        "extensions": [
            "ts"
        ],
        "rules": {
            "@typescript-eslint/prefer-readonly-parameter-types": "off",
            "@typescript-eslint/restrict-template-expressions": "off",
            "@typescript-eslint/no-unsafe-return": "off"
        }
    },
    "dependencies": {
        "mathjs": "^7.0.0"
    }
}
